mixin header()
    header.header
        div.header__wrap.container
            svg.logo
                use(xlink:href="./assets/images/svg/symbol/sprite.svg#logo")
            +navMenu([
              {anchor: "#portfolio", title: "Portfolio", isActive: false},
              {anchor: "#advantages", title: "Why me", isActive: false},
              {anchor: "#process", title: "Process", isActive: false},
              {anchor: "#contacts", title: "Contacts", isActive: false}
            ], 'header__menu nav-menu')
            div.header__col
                +button('accent_transparent', 'header__link', 'Check CV', 'link', '#')
                +burger-btn()
